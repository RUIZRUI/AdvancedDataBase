void low_part()
{
        int num;
        int my_part_id;
        char my_part_name[20];
        printf("Enter a pa number please(0 to exit)\n");
        scanf("%d",&num);
        if(num == 0)
        {
                printf("End\n");
                return;
        }
        EXEC SQL declare low_part_c1 cursor for 
                select p.part_id, p.part_name
                from responsible r, part p
                where r.emp_num=:num and r.part_id=p.part_id and p.stock_qty+p.order_qty<=p.min_qty;

        EXEC SQL open low_part_c1;
        EXEC SQL WHENEVER NOT FOUND do break;
        printf("\tpart_id\tpart_name\n");
        for(;;)
        {
                EXEC SQL fetch low_part_c1 into :my_part_id, :my_part_name;
                printf("\t%d\t%s\n", my_part_id, my_part_name);
        }
        printf("End");
        EXEC SQL close low_part_c1;
        EXEC SQL COMMIT;
        return;
}


void pot_supp()
{
        int num;
        int my_supplier_id;
        int my_product_id;
        int my_unit;
        float my_unit_price;
        printf("Enter a part number please(0 to exit)\n");
        scanf("%d",&num);
        if(num == 0)
        {
                printf("End\n");
                return;
        }
        EXEC SQL declare pot_supp_c1 cursor for 
                select p.supplier_id, p.product_id, p.unit, p.unit_price
                from pot_supplier pot, product p
                where pot.part_id=:num and pot.product_id=p.product_id;
        EXEC SQL open pot_supp_c1;
        EXEC SQL WHENEVER NOT FOUND do break;
        printf("\tsupplier_id\tproduct_id\tunit\tunit_price\n");
        for(;;)
        {
                EXEC SQL fetch pot_supp_c1 into :my_supplier_id, :my_product_id, :my_unit, :my_unit_price;
                printf("\t%d\t%d\t%d\t%6.2f\n", my_supplier_id, my_product_id, my_unit, my_unit_price);
        }
        printf("End");
        EXEC SQL close pot_supp_c1;
        EXEC SQL COMMIT;
        return;
}